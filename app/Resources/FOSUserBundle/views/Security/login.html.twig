<form action="{{ path("fos_user_security_check") }}" method="post" id="login-form">
	<div class="form-group wide">
		<div class="input-group">
			<span class="input-group-addon">
				<i class="fa fa-envelope"></i>
			</span>
			<input type="text" id="username" name="_username" value="{{ last_username }}" class="form-control" required="required" placeholder="Felhasználónév"/>
		</div>
	</div>
	<div class="form-group wide">
		<div class="input-group">
			<span class="input-group-addon">
				<i class="fa fa-lock"></i>
			</span>
			<input type="password" id="password" name="_password" class="form-control" required="required" placeholder="Jelszó"/>
		</div>
	</div>

	{% if error %}
		<div class="widget-content error-msg">
			<div class="alert alert-danger">
				<button class="close" data-dismiss="alert" type="button">&times;</button>{{ error.messageKey|trans(error.messageData, 'security') }}
			</div>
		</div>
	{% endif %}

	<a class="pull-right" style="margin-bottom: 10px; color: #9fcc4e;" href="{{ path("fos_user_registration_register") }}">Regisztrállás</a>

	<button class="btn btn-lg btn-primary btn-block" type="submit">
		Bejelentkezés
	</button>
	<input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
</form>